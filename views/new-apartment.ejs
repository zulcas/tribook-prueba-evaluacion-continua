                <div class="p-5 mt-lg-5 pb-2">
                    <h1 class="display-6 animated fadeIn mb-3 new-apartment">Añadir nuevo alojamiento</h1>
                    <p class="animated fadeIn mb-2 pb-2">Añade un nuevo alojamiento a tu perfil de TriBook y contribuye a que otros usuarios disfruten de sus vacaciones en Cataluña</p>
                    <!-- <a href="" class="btn btn-primary py-3 px-5 me-3 animated fadeIn">Reserva ya</a> -->
                </div>
            </div>
        </div>
        <!-- Header End -->

        <!-- Form Start -->
        <div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
            <div class="container">
                <!--Start form add new apartment-->
                <form action="/admin/apartment/new-apartment" method="POST" class="col-md-10 row g-2 flex-dir-col">
                    <!--Start General Information section-->
                    <section class="col-md-4 w-100" id="describeInformation">
                        <!--Title-->
                        <label for="title" class=" text-white fs-6 fw-bold">Título del alojamiento (*)</label>
                        <input type="text" name="title" class="form-control mb-2 border-0 py-3" placeholder="Máx 50 caracteres" maxlength="50" required>
                        <!--Description-->
                        <label for="description" class="text-white fs-6 fw-bold">Descripción (*)</label>
                        <textarea name="description" id="description" class="form-control mb-2 border-0 py-3" rows="4" cols="125"></textarea>
                        <!--Rules-->
                        <label for="rules" class="text-white fs-6 fw-bold">Normas del alojamiento</label>
                        <textarea name="rules" id="rules" class="form-control mb-2 border-0 py-3" rows="4" cols="125"></textarea>
                        <!--Price-->
                        <label for="price" class="text-white fs-6 fw-bold">Precio por noche (*)</label>
                        <input type="number" name="price" class="form-control mb-2 border-0 py-3" placeholder="Precio/noche (€)" min="0" required>
                        <!--Meters-->
                        <label for="meters" class="text-white fs-6 fw-bold"> m<sup>2</sup> del alojamiento (*)</label>
                        <input type="number" name="meters" class="form-control mb-2 border-0 py-3" placeholder="80 m2" min="1" required>
                        <!--Stays information-->
                        <div class="col-md-4 w-100 mb-2 formSameRow">
                            <span class="rooms">
                                <label for="rooms" class="text-white fs-6 fw-bold">Habitaciones</label>
                                <input type="number" name="rooms" class="form-control border-0 py-3 formSelectNumber" value="1" min="1" required>
                            </span>
                            <span class="beds">
                                <label for="beds" class="text-white fs-6 fw-bold">Camas</label>
                                <input type="number" name="beds" class="form-control border-0 py-3 formSelectNumber" value="1" min="1" required>
                            </span>
                            <span class="bathrooms">
                                <label for="bathrooms" class="text-white fs-6 fw-bold">Baños</label>
                                <input type="number" name="bathrooms" class="form-control border-0 py-3 formSelectNumber" value="1" min="1" required>
                            </span>
                            <span class="maxPeople">
                                <label for="maxPeople" class="text-white fs-6 fw-bold">Máx. huéspedes</label>
                                <input type="number" name="maxPeople" class="form-control border-0 py-3 formSelectNumber" value="1" min="1" required>
                            </span>
                        </div>
                    </section>
                    <!--End General Information section-->

                    <!--Start Address information-->
                    <section class="col-md-4 w-100" id="formDirection">
                        <!--Direction-->
                        <label for="street" class="text-white fs-6 fw-bold">Dirección (*)</label>
                        <input type="text" name="street" class="form-control mb-2 border-0 py-3" required>
                        <!--Province-->
                        <label for="province" class="text-white fs-6 fw-bold">Provincia (*)</label>
                        <select name="province" class="form-control mb-2 border-0 py-3" id="ps-prov" required>
                            <option value="08">Barcelona</option>
                            <option value="17">Girona</option>
                            <option value="25">Lleida</option>
                            <option value="43">Tarragona</option>
                        </select>
                        <input type="hidden" name="provinceName" id="provinceName">
                        <!--City-->
                        <label for="city" class="text-white fs-6 fw-bold">Municipio (*)</label>
                        <select name="city" class="form-control border-0 mb-2 py-3" id="ps-mun" required></select>
                        <input type="hidden" id="cityName" name="cityName">
                        <!--Postal Code-->
                        <label for="postalCode" class="text-white fs-6 fw-bold" title="Código postal inválido. Debe ser un número de 5 cifras" >Código Postal (*)</label>
                        <input type="text" name="postalCode" class="form-control border-0 py-3 mb-2" pattern="^\d{5}$" required>
                        <!--GPS-->
                        <label for="GPS" class="text-white fs-6 fw-bold">Coordenadas GPS</label>
                        <div class="formSameRow">
                            <span class="latitude">
                                <label for="latitude" class="text-white">Latitud (*)</label>
                                <input type="number" name="latitude" class="form-control border-0 py-3" pattern="^-?(90(\.0{1,2})?|[1-8]?\d(\.\d{1,2})?)$" required>
                            </span>
                            <span class="longitude">
                                <label for="longitude" class="text-white">Longitud (*)</label>
                                <input type="number" name="longitude" class="form-control border-0 py-3" pattern="^(\+|-)?(?:180(?:\.0{1,2})?|1[0-7]\d(?:\.\d{1,2})?|[1-9]?\d(?:\.\d{1,2})?)$" required >
                            </span>
                        </div>
                    </section>
                    <!--End Address information-->
                    
                    <!--Start Photo Information-->
                    <section class="col-md-4 w-100" id="photos">
                        <!--MainPhoto information-->
                        <label for="mainPhoto" class=" text-white fs-6 fw-bold"> Foto principal alojamiento (*)</label>
                        <input type="url" name="mainPhoto" class="form-control mb-2 border-0 py-3" placeholder="e.g, https://ejemplo.com" required>
                        <!--OptionalPhoto information-->
                        <label for="optionalPhotos" class=" text-white fs-6 fw-bold">Fotos adicionales</label>
                        <input type="url" name="optionalPhotos" class="form-control border-0 mb-2 py-3" placeholder="e.g, https://ejemplo_opcional.com">
                        <input type="url" name="optionalPhotos" class="form-control border-0 mb-2 py-3" placeholder="e.g, https://ejemplo_opcional.com">
                        <input type="url" name="optionalPhotos" class="form-control border-0 py-3" placeholder="e.g, https://ejemplo_opcional.com">
                    </section>    
                    <!--End Photo Information-->

                    <!--Start Services Information-->
                    <section class="col-md-4 w-100" id="services">
                        <label for="services" class=" text-white fs-6 fw-bold mb-2">Servicios disponibles
                        </label>
                        <div class="border-0 formServices">
                            <label>
                                <input type="checkbox" name="services" class="form-check-input" value="wifi"> Internet
                            </label>
                            <label>
                                <input type="checkbox" name="services" class="form-check-input" value="kitchen"> Cocina
                            </label>
                            <label>
                                <input type="checkbox" name="services" class="form-check-input" value="tv"> Televisión
                            </label>
                            <label>
                                <input type="checkbox" name="services" class="form-check-input" value="adapted"> Adaptado
                            </label>
                            <label>
                                <input type="checkbox" name="services" class="form-check-input" value="heating"> Calefacción
                            </label>
                            <label>
                                <input type="checkbox" name="services" class="form-check-input" value="airConditioner"> Aire acondicionado
                            </label>
                        </div>
                    </section>
                    <!--End Services Information-->

                    <div class="col-md-2 mt-3">
                        <input type="submit" value="Añadir" class="btn btn-dark border-0 w-100 py-3">
                    </div>
                </form>
            </div>
        </div>
